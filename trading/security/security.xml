<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="trading_comp_rule" model="ir.rule">
            <field name="name">Trading multi company rule</field>
            <field name="model_id" ref="model_trading_types"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
            </field>
        </record>
    </data>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_trading">
            <field name="name">Trading</field>
            <field name="description">Helps to control Trading</field>
            <field name="sequence">50</field>
        </record>

        <record id="group_trading_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="trading.module_category_trading"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_trading_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="trading.module_category_trading"/>
            <field name="implied_ids" eval="[(4, ref('group_trading_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>


        <record model="ir.module.category" id="module_material_request_groups">
            <field name="name">Material Request</field>
            <field name="description">Material Request Workflow</field>
            <field name="sequence">17</field>
        </record>

        <record model="res.groups" id="group_approve">
            <field name="name">Approve</field>
            <field name="category_id" ref="module_material_request_groups"/>
        </record>

        <record model="res.groups" id="group_transfer">
            <field name="name">Transfer</field>
            <field name="category_id" ref="module_material_request_groups"/>
        </record>

        <record model="res.groups" id="group_location">
            <field name="name">Show Location</field>
            <field name="category_id" ref="module_material_request_groups"/>
        </record>
    </data>
</odoo>