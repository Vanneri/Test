<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="purchase_order_form_trading" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.trading</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='date_order']" position="before">
                    <!-- Add your fields or attributes here -->
                    <field name="trading_id" options="{'no_create': True}" required="True"/>
                </xpath>

                <xpath expr="//field[@name='partner_ref']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="partner_customer_id" options="{'no_create': True,'always_reload': True}" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1, 'show_vat': True}"/>
                    <field name="sale_id" options="{'no_create': True}" domain="[('partner_id','=',partner_customer_id),('trading_id','=',trading_id),('state','=','sale')]"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='company_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="sale_line_id" invisible="1" readonly="0"/>
                    <field name="sale_id" invisible="0" readonly="0"/>
                    <field name="delivery_status" invisible="1"/>
                </xpath>

                <xpath expr="//notebook/page[@name='purchase_delivery_invoice']/group/group/field[@name='invoice_status']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="delivery_status"/>
                </xpath>

            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_purchase_trading" name="PO" parent="trading.menu_trading" action="purchase.purchase_form_action"
                  sequence="20"/>


    </data>
</odoo>