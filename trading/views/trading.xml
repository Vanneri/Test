<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="trading_types_form2" model="ir.ui.view">
            <field name="name">trading.types.form</field>
            <field name="model">trading.types</field>
            <field name="arch" type="xml">
                <form string="Types">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="trading_types_tree2" model="ir.ui.view">
            <field name="name">trading.types.tree</field>
            <field name="model">trading.types</field>
            <field name="arch" type="xml">
                <tree string="Types">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_trading_types" model="ir.actions.act_window">
            <field name="name">Trading Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trading.types</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Trading Types Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="action_trading_types_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="trading_types_tree2"/>
            <field name="act_window_id" ref="action_trading_types"/>
        </record>

        <record id="action_trading_types_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="trading_types_form2"/>
            <field name="act_window_id" ref="action_trading_types"/>
        </record>

