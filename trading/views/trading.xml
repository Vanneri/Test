<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="trading_types_form" model="ir.ui.view">
           <field name="name">trading.types.form</field>
           <field name="model">trading.types</field>
           <field name="arch" type="xml">
               <form string="">
                   <sheet>
                       <group>
                           <field name="name"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>


        <record id="trading_types_tree" model="ir.ui.view">
            <field name="name">trading.types.tree</field>
            <field name="model">trading.types</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="trading_types_kanban" model="ir.ui.view">
            <field name="name">trading.types.kanban</field>
            <field name="model">trading.types</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_trading_kanban" create="0">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div name="trading_type">
                                <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                                    <div t-attf-class="o_kanban_card_header">
                                        <div class="o_kanban_card_header_title">
                                            <div class="o_primary">

                                                <field name="name"/>

                                            </div>

                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#">
                                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage"
                                                   title="Manage"/>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                        <div class="col-8" role="menuitem" aria-haspopup="true">
                                            <ul role="menu" class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                        <div role="menuitem" class="col-4 text-right">
                                            <a type="edit">Settings</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </t>

                    </templates>
                </kanban>
            </field>
        </record>

        <record id="trading_types_action" model="ir.actions.act_window">
            <field name="name">Trading Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trading.types</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Trading Types Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>


        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="menu_trading" name="Trading" sequence="10"/>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="menu_trading_configuration" name="Configuration" parent="menu_trading" sequence="50"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_trading_types" name="Types" parent="menu_trading_configuration" action="trading_types_action" sequence="10"/>


        <record id="trading_types_action_kanban" model="ir.actions.act_window">
            <field name="name">Trading Overview</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trading.types</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    
                </p>
                <p>

                </p>
            </field>
        </record>

        <menuitem action="trading_types_action_kanban" id="menu_trading_types_overview" parent="menu_trading" sequence="0"
                  name="Overview"/>

    </data>
</odoo>